#!/bin/sh

if [[ "$HTTP_PORT" == '' ]]; then
  export HTTP_PORT=8002
fi

if [[ "$LOGPLEX_AUTH_KEY" == '' ]]; then
  export LOGPLEX_AUTH_KEY=secret
fi

erl -name logplex_api_test@$hostname -pa ebin -pa deps/*/ebin -boot start_sasl -boot crypto -noshell -eval 'eunit:test({application,logplex})' -s init stop